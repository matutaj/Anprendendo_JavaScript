{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "strict": true,
        "skipLibCheck": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}